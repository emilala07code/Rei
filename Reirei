  <script>
    const quotes = [
      "You're doing better than you think.",
      "You are enough, just as you are.",
      "Take a breath. One moment at a time.",
      "Your kindness is your strength.",
      "Even stars take time to shine.",
      "Youâ€™ve made it through 100% of your tough days so far.",
      "Small steps still move you forward.",
      "Itâ€™s okay to rest. Youâ€™re human.",
      "Youâ€™re more loved than you know.",
      "Keep going. Rei, youâ€™ve got this ðŸŒŸ",
      "Your calm energy brings peace to others.",
      "Brighter days are quietly making their way to you.",
      "You inspire more people than you realize.",
      "Your presence matters. Always has, always will.",
      "Youâ€™re not alone in this moment. Someone cares deeply â€” always.",
      "Dreams donâ€™t work unless you do, and I know you will.",
      "Every step toward your dream matters, no matter how small.",
      "Your future is built on the courage you show today.",
      "Let your heart guide you, even if the road seems unclear.",
      "The world needs your light, your dreams, and your courage."
    ];

    const jar = document.getElementById("jar");
    const quoteEl = document.getElementById("quote");

    function getRandomQuote() {
      return quotes[Math.floor(Math.random() * quotes.length)];
    }

    function createSparkle(x, y) {
      const sparkle = document.createElement("div");
      sparkle.classList.add("sparkle");
      sparkle.style.width = sparkle.style.height = Math.random() * 6 + 4 + "px";
      sparkle.style.left = x + "px";
      sparkle.style.top = y + "px";
      document.body.appendChild(sparkle);
      setTimeout(() => sparkle.remove(), 1000);
    }

    jar.addEventListener("click", () => {
      const rect = jar.getBoundingClientRect();
      for (let i = 0; i < 8; i++) {
        createSparkle(
          rect.left + Math.random() * rect.width,
          rect.top + Math.random() * rect.height
        );
      }
      quoteEl.textContent = `"${getRandomQuote()}"`;
      quoteEl.classList.add("show");
      setTimeout(() => {
        quoteEl.classList.remove("show");
      }, 10000);
    });
  </script>
